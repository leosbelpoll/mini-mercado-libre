{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "API Mini Mercado Libre",
        "description": "Express API to Test Pr√°ctico - Frontend",
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/licenses/MIT"
        }
    },
    "basePath": "/api",
    "tags": [
        {
            "name": "Items",
            "description": "API for items in the system"
        }
    ],
    "schemes": ["http"],
    "consumes": ["application/json"],
    "produces": ["application/json"],
    "paths": {
        "/items": {
            "get": {
                "parameters": [
                    {
                        "name": "q",
                        "in": "query",
                        "schema": {
                            "type": "string"
                        },
                        "description": "Query that want to find",
                        "type": "string"
                    }
                ],
                "tags": ["Items"],
                "summary": "Get all item in system",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/ItemsResponse"
                        }
                    }
                }
            }
        },
        "/items/{itemId}": {
            "parameters": [
                {
                    "name": "itemId",
                    "in": "path",
                    "required": true,
                    "description": "ID of item that we want to find",
                    "type": "string"
                }
            ],
            "get": {
                "tags": ["Items"],
                "summary": "Get item with given ID",
                "responses": {
                    "200": {
                        "description": "Item is found",
                        "schema": {
                            "$ref": "#/definitions/ItemResponse"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "ItemResponse": {
            "properties": {
                "author": {
                    "$ref": "#/definitions/Author"
                },
                "item": {
                    "$ref": "#/definitions/Item"
                }
            }
        },

        "ItemsResponse": {
            "properties": {
                "author": {
                    "$ref": "#/definitions/Author"
                },
                "categories": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "items": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Item"
                    }
                }
            }
        },
        "Item": {
            "required": ["email", "_id"],
            "properties": {
                "id": {
                    "type": "string",
                    "uniqueItems": true
                },
                "title": {
                    "type": "string"
                },
                "price": {
                    "type": "object",
                    "properties": {
                        "currency": {
                            "type": "string"
                        },
                        "amount": {
                            "type": "string"
                        },
                        "decimals": {
                            "type": "string"
                        }
                    }
                },
                "picture": {
                    "type": "string"
                },
                "condition": {
                    "type": "string"
                },
                "free_shipping": {
                    "type": "boolean"
                },
                "sold_quantity": {
                    "type": "number"
                },
                "description": {
                    "type": "string"
                },
                "city_name": {
                    "type": "string"
                }
            }
        },
        "Author": {
            "properties": {
                "name": {
                    "type": "string"
                },
                "lastname": {
                    "type": "string"
                }
            }
        }
    }
}
